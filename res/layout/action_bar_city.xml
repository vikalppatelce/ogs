<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@drawable/ab_solid_example" >

    <RelativeLayout
        android:id="@+id/actionBarTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <TextView
            android:id="@+id/actionBarTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="48dp"
            android:gravity="left|center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/actionBarSearchIcon"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:padding="7dp"
            android:src="@drawable/ic_ab_search" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/actionBarSearchLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <EditText
            android:id="@+id/actionBarSearchBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="48dp"
            android:hint="Search"/>

        <ImageView
            android:id="@+id/actionBarSearchBoxClose"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:padding="7dp"
            android:src="@drawable/abs__ic_clear_normal" />
    </RelativeLayout>

</RelativeLayout>